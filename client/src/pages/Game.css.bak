/**
 * OP TCG Battle Board - Based on pencil-new.pen JKtu6
 * Layout: Top(OppHand) | Middle(Board+Preview) | Bottom(PlrHand+Actions)
 */

/* ============ ROOT LAYOUT ============ */
.game {
  height: 100vh;
  width: 100vw;
  background: #0A0A0A;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  color: #FAF8F5;
  font-family: 'Manrope', 'Segoe UI', sans-serif;
  user-select: none;
}

/* ============ TOP: OPPONENT HAND AREA ============ */
.opp-hand-area {
  height: 120px;
  background: #121216;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 8px 16px;
  flex-shrink: 0;
}
.opp-hand-cards {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.opp-hand-cards .hand-card-wrap {
  margin-left: -30px;
  transition: transform 0.15s;
}
.opp-hand-cards .hand-card-wrap:first-child { margin-left: 0; }
.opp-stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 24px;
  background: #1F1F1F;
  width: 100%;
  padding: 0 12px;
  box-sizing: border-box;
  margin-top: 4px;
}
.opp-stats-bar .name { color: #FAF8F5; font-size: 11px; font-weight: 600; }
.stats-right { display: flex; gap: 8px; font-size: 10px; }
.stat-life { color: #F87171; }
.stat-deck { color: #888; }

/* ============ MIDDLE SECTION ============ */
.middle-section {
  flex: 1;
  display: flex;
  overflow: hidden;
  min-height: 0;
}

/* --- Board Area (left, fills) --- */
.board-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

/* Board Divider */
.board-divider {
  height: 1px;
  flex-shrink: 0;
  background: linear-gradient(90deg, transparent, #C9A96266, transparent);
}

/* --- Each player board --- */
.opponent-board, .player-board {
  flex: 1;
  display: flex;
  background: #141418;
  border: 1px solid #1F1F1F;
  overflow: hidden;
  min-height: 0;
}
.opponent-board { flex-direction: row; }
.player-board { flex-direction: row; }

/* --- Life Column --- */
.life-col {
  width: 100px;
  background: #1A1A22;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  padding: 8px 0;
}
.life-label {
  color: #C9A962;
  font-size: 10px;
  font-weight: 800;
  letter-spacing: 2px;
  writing-mode: vertical-lr;
  margin-bottom: 8px;
}
.opponent-board .life-label { transform: rotate(180deg); }
.life-stack {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
}
.life-stack .life-card-wrap {
  margin-top: -55px;
}
.life-stack .life-card-wrap:first-child { margin-top: 0; }
.life-card {
  width: 56px;
  height: 78px;
  background: linear-gradient(180deg, #8B0000, #C62828 50%, #8B0000);
  border: 1px solid #333;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFD70066;
  font-size: 12px;
  font-weight: 800;
}

/* --- Main Area --- */
.main-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  gap: 2px;
  min-width: 0;
}

/* Character row */
.char-row {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  background: #1A1A22;
  border-radius: 6px;
  padding: 8px;
  min-height: 0;
  position: relative;
}

/* Middle row (deck/stage/leader) */
.mid-row {
  height: 140px;
  display: flex;
  gap: 4px;
  flex-shrink: 0;
}
.mid-row .zone {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #1A1A22;
  border-radius: 6px;
  min-width: 0;
}
.zone-label {
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 2px;
  margin-bottom: 4px;
}
.zone-label.gold { color: #C9A962; }
.zone-label.gray { color: #666; }

/* Bottom row (don-deck / cost area / trash) */
.bot-row {
  height: 60px;
  display: flex;
  gap: 4px;
  flex-shrink: 0;
}
.bot-row .zone {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1A1A22;
  border-radius: 6px;
}
.zone-fixed { width: 100px; flex-shrink: 0; }
.zone-fill { flex: 1; }
.zone-count { color: #FAF8F5; font-size: 10px; font-weight: 700; margin-left: 4px; }

/* Cost Area DON cards */
.cost-zone {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3px;
  padding: 6px;
  background: #1A1A22;
  border-radius: 6px;
  flex-wrap: wrap;
}
.cost-zone-label { color: #333; font-size: 10px; font-weight: 700; }

/* DON card small */
.don-card-small {
  width: 44px;
  height: 55px;
  background: linear-gradient(180deg, #FFD700, #FFA000);
  border: 1px solid #FF8F00;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 7px;
  font-weight: 800;
  color: #5D4037;
  cursor: pointer;
  transition: transform 0.15s, box-shadow 0.15s;
  flex-shrink: 0;
}
.don-card-small:hover { transform: scale(1.1); box-shadow: 0 0 8px #FFD70088; }
.don-card-small.rested { transform: rotate(90deg) scale(0.85); opacity: 0.6; }
.don-card-small.selectable { box-shadow: 0 0 6px #C9A962; cursor: pointer; }
.don-card-small.selected { box-shadow: 0 0 10px #FFD700; outline: 2px solid #FFD700; }

/* Card slot */
.card-slot {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}
.card-slot .don-badge {
  height: 14px;
  background: #C9A96230;
  padding: 0 6px;
  display: flex; align-items: center; gap: 2px;
  font-size: 8px; font-weight: 700; color: #C9A962;
  border-radius: 2px;
}
.empty-slot {
  width: 80px; height: 112px;
  border: 1px dashed #2A2A4A;
  border-radius: 4px;
  background: #0D213710;
}

/* Deck visual */
.deck-zone-card {
  width: 88px; height: 122px;
  background: linear-gradient(180deg, #8B0000, #C62828 50%, #8B0000);
  border: 1px solid #333; border-radius: 4px;
  display: flex; align-items: center; justify-content: center;
  color: #FFD70066; font-size: 16px; font-weight: 800;
}
.deck-count-label { color: #FAF8F5; font-size: 12px; font-weight: 700; margin-top: 4px; }

/* Targetable */
.card-slot.targetable { cursor: pointer; }
.card-slot.targetable::after {
  content: ''; position: absolute; inset: -3px;
  border: 2px solid #EF5350; border-radius: 6px;
  animation: target-pulse 1s infinite; pointer-events: none;
}
@keyframes target-pulse { 0%,100% { opacity: 1; } 50% { opacity: 0.4; } }

/* --- Preview Sidebar --- */
.preview-sidebar {
  width: 300px;
  background: #0F0F0F;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  border-left: 1px solid #1F1F1F;
}
.card-preview-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #0D0D10;
  gap: 4px;
  padding: 12px;
}
.preview-title { color: #C9A962; font-size: 14px; font-weight: 500; }
.preview-card-large {
  width: 160px; height: 224px;
  background: #1A1A2E; border: 2px solid #C9A962;
  border-radius: 4px; overflow: hidden;
  display: flex; flex-direction: column;
}
.preview-card-large .prev-top-bar {
  height: 28px; background: #C9A96230;
  display: flex; align-items: center; justify-content: space-between;
  padding: 0 8px; flex-shrink: 0;
}
.prev-cost { color: #C9A962; font-size: 16px; font-weight: 700; }
.prev-power { color: #FAF8F5; font-size: 14px; font-weight: 600; }
.prev-counter { color: #4ADE80; font-size: 10px; font-weight: 500; }
.prev-img-area {
  flex: 1; background: #2A2A4A;
  display: flex; align-items: center; justify-content: center; overflow: hidden;
}
.prev-img-area img { width: 100%; height: 100%; object-fit: cover; }
.prev-info-area {
  background: #0F0F0F; padding: 6px 8px;
  display: flex; flex-direction: column; gap: 4px;
}
.prev-card-name { color: #FAF8F5; font-size: 14px; font-weight: 500; }
.prev-card-trait { color: #888; font-size: 8px; font-weight: 500; }
.prev-effect { color: #FAF8F5; font-size: 8px; line-height: 1.4; max-height: 60px; overflow-y: auto; }
.preview-placeholder { color: #666; font-size: 12px; }

/* Game log in preview sidebar */
.game-log {
  padding: 8px; max-height: 140px; overflow-y: auto;
  font-size: 9px; color: #888; border-top: 1px solid #1F1F1F;
}
.game-log .log-entry { padding: 2px 0; border-bottom: 1px solid #111; }

/* ============ BOTTOM: PLAYER HAND AREA ============ */
.plr-hand-area {
  height: 160px;
  background: #121216;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10px 20px;
  flex-shrink: 0;
}
.action-buttons {
  display: flex; align-items: center; justify-content: center;
  gap: 6px; height: 32px; flex-shrink: 0;
}
.btn-battle {
  height: 28px; padding: 0 14px;
  background: #C9A962; color: #0A0A0A; border: none;
  font-size: 10px; font-weight: 600; cursor: pointer;
  transition: all 0.15s;
}
.btn-battle:hover { background: #D4B872; }
.btn-battle:disabled { opacity: 0.4; cursor: not-allowed; }
.btn-end-turn {
  height: 28px; padding: 0 14px;
  background: transparent; color: #888;
  border: 1px solid #1F1F1F; font-size: 10px; font-weight: 500; cursor: pointer;
}
.btn-end-turn:hover { border-color: #444; color: #ccc; }
.btn-cancel-action {
  height: 28px; padding: 0 14px;
  background: #C62828; color: white; border: none;
  font-size: 10px; font-weight: 600; cursor: pointer;
}
.plr-stats-bar {
  display: flex; justify-content: space-between; align-items: center;
  height: 24px; background: #C9A96215; width: 100%;
  padding: 0 12px; box-sizing: border-box; flex-shrink: 0;
}
.plr-stats-bar .name { color: #C9A962; font-size: 11px; font-weight: 600; }
.plr-hand-cards {
  display: flex; justify-content: center; align-items: flex-end;
  flex: 1; min-height: 0;
}
.plr-hand-cards .hand-card-wrap {
  margin-left: -30px;
  transition: transform 0.2s, margin-top 0.2s;
  cursor: pointer;
  position: relative;
}
.plr-hand-cards .hand-card-wrap:first-child { margin-left: 0; }
.plr-hand-cards .hand-card-wrap:hover {
  transform: translateY(-20px) scale(1.08); z-index: 100;
}

/* ============ PHASE PROMPT BAR ============ */
.phase-prompt-bar {
  position: fixed;
  top: 0; left: 0; right: 0;
  height: 32px;
  background: linear-gradient(180deg, #0A0A0Acc, #0A0A0A44);
  display: flex; align-items: center; justify-content: center;
  gap: 16px; z-index: 200;
}
.phase-badge {
  background: #C9A96220; border: 1px solid #C9A96244;
  color: #C9A962; padding: 3px 14px; border-radius: 20px;
  font-size: 11px; font-weight: 600;
}
.phase-hint { color: #AAA; font-size: 11px; }

/* ============ ATTACK LINE SVG ============ */
.attack-line-overlay {
  position: fixed; inset: 0; z-index: 150; pointer-events: none;
}
.attack-line-overlay svg { width: 100%; height: 100%; }
.attack-line {
  stroke: #EF5350; stroke-width: 2;
  stroke-dasharray: 8 4; fill: none;
  animation: dash-flow 0.6s linear infinite;
}
@keyframes dash-flow { to { stroke-dashoffset: -12; } }

/* ============ DEFENDER OVERLAY ============ */
.defender-overlay {
  position: fixed; top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  background: #0A0A0AF0; border: 2px solid #C9A962;
  border-radius: 12px; padding: 24px 32px; z-index: 500;
  text-align: center; max-width: 420px;
}
.defender-overlay h2 { color: #C9A962; font-size: 18px; margin: 0 0 8px; }
.defender-overlay p { color: #AAA; font-size: 13px; margin: 0 0 16px; }
.defender-overlay .def-actions { display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; }
.defender-overlay button {
  padding: 8px 20px; background: #1F1F1F; color: #FAF8F5;
  border: 1px solid #333; border-radius: 4px; cursor: pointer; font-size: 12px;
}
.defender-overlay button:hover { background: #333; }
.defender-overlay button.primary { background: #C9A962; color: #0A0A0A; border-color: #C9A962; font-weight: 600; }

/* ============ GAME END ============ */
.game-end-overlay {
  position: fixed; inset: 0; background: #0A0A0AE0; z-index: 600;
  display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 20px;
}
.game-end-overlay h1 { font-size: 48px; }
.game-end-overlay button {
  padding: 12px 32px; font-size: 16px;
  background: #C9A962; color: #0A0A0A; border: none; cursor: pointer;
  font-weight: 700; border-radius: 4px;
}

/* ============ ERROR TOAST ============ */
.error-toast {
  position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%);
  background: #C62828; color: white; padding: 8px 20px;
  border-radius: 4px; z-index: 700; cursor: pointer; font-size: 13px;
}

/* ============ CARD SIZE OVERRIDES ============ */
.opp-hand-cards .card { width: 38px !important; height: 54px !important; font-size: 6px !important; }
.opp-hand-cards .card .card-cost, .opp-hand-cards .card .card-power,
.opp-hand-cards .card .card-name, .opp-hand-cards .card .card-info,
.opp-hand-cards .card .card-effect, .opp-hand-cards .card .card-counter,
.opp-hand-cards .card .card-life, .opp-hand-cards .card .card-trigger-badge { display: none; }

.plr-hand-cards .card { width: 52px !important; height: 73px !important; font-size: 7px !important; }
.plr-hand-cards .card .card-info, .plr-hand-cards .card .card-effect,
.plr-hand-cards .card .card-trigger-badge { display: none; }

.char-row .card-slot .card { width: 90px !important; height: 126px !important; }
.leader-zone .card { width: 96px !important; height: 134px !important; }
.stage-zone .card, .deck-zone .card, .trash-zone .card { width: 80px !important; height: 112px !important; }

/* Rested / Selected */
.card-slot.rested .card { transform: rotate(90deg); }
.card-slot.selected > .card { box-shadow: 0 0 12px #C9A962; outline: 2px solid #C9A962; }
